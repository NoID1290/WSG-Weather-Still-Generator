<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <LangVersion>latest</LangVersion>
    <Version>1.2.4.0115</Version>
    <AssemblyVersion>1.2.4.0115</AssemblyVersion>
    <FileVersion>1.2.4.0115</FileVersion>
    <RootNamespace>WeatherImageGenerator</RootNamespace>
    <AssemblyName>WSG</AssemblyName>
    <AssemblyCompany>NoID Softwork</AssemblyCompany>
    <AssemblyProduct>Weather Image Generator</AssemblyProduct>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\OpenMeteo\OpenMeteo.csproj" />
    <ProjectReference Include="..\WeatherShared\WeatherShared.csproj" />
    <ProjectReference Include="..\ECCC\ECCC.csproj" />
    <ProjectReference Include="..\EAS\EAS.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Content Include="WeatherImages\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Music\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>